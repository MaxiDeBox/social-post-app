{
  "name": "social-post-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "p:fix": "prettier --config ./.prettierrc --write \"src/{app,envirents}/**/*{.ts,.html,.scss}\"",
    "lint": "ng lint",
    "dev:ssr": "ng run angular-starter:serve-ssr",
    "serve:ssr": "node dist/angular-starter/server/main.js",
    "build:ssr": "ng build && ng run angular-starter:server",
    "prerender": "ng run angular-starter:prerender"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --config ./.prettierrc --write \"src/{app,envirents}/**/*{.ts,.html,.scss}\" . && git add -A ."
    }
  },
  "private": true,
